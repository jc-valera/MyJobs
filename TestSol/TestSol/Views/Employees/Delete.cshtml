@model TestSol.Models.Entities.Employee

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Empleado</h1>

<h3>Esta seguro de eliminar este empleado?</h3>
<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Apellido Paterno:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstSurname)
        </dd>
        <dt class = "col-sm-2">
            Apellido Materno:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondSurname)
        </dd>
        <dt class = "col-sm-2">
            Area:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Area)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Nacimiento:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            Salario:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <br />
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        <a  class="btn btn-secondary" asp-action="Index">Regresar</a>
    </form>
</div>
