@model TestSol.Models.Entities.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles Empleado</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Apellido Paterno:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstSurname)
        </dd>
        <dt class = "col-sm-2">
            Apellido Materno:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondSurname)
        </dd>
        <dt class = "col-sm-2">
            Area:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Area)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Nacimiento:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            Salario:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <br />
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
</div>
